.card
  max-height 300px
  padding 8px
  background var(--arsenic-color)

  h2
    font-family 'Nunito', sans-serif
    line-height 20px
    font-weight 800
    font-size 1.2em
    color var(--keppel-color)
    margin-bottom 1em

  p
    font-family 'Nunito', sans-serif
    color white
    font-weight 300
    font-size 1em

  .actions
    display flex
    color white
    justify-content flex-end
    margin-top 3%

    i
      margin-inline 5px
      font-size 1.2em
      background-color rgba(255, 255, 255, 0.1)
      border-radius 50% 
      padding 8px  
      cursor pointer 
      transition all 0.3s 

      &:hover
        background-color rgba(255, 255, 255, 0.2)  // Fondo un poco más claro al pasar el ratón por encima
.modal-overlay
  position fixed
  z-index 1
  left 0
  top 0
  height 100%
  width 100%
  overflow auto
  background-color rgba(0, 0, 0, 0.5)

.modal-content
  margin 15% auto
  padding 3% 0;
  display flex
  justify-content center
  height: 50vh


.todo-form
  --clr-alpha #9c9c9c60
  background-color var(--arsenic-color)
  box-shadow 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 7px 20px 0 rgba(0, 0, 0, 0.17)
  display flex
  flex-direction column
  align-items center
  gap 1rem
  width 30%
  padding 1% 3%
  justify-content: space-evenly;


  .input-span
    width 100%
    display flex
    flex-direction column
    gap 0.5rem

  input[type="text"],
  input[type="date"],
  textarea
    border-radius 0.5rem
    padding 1rem 0.75rem
    width 100%
    border none
    background-color var(--clr-alpha)
    outline 2px solid var(--keppel-dark-color)
    color #fff

  input[type="text"]:focus,
  input[type="date"]:focus,
  textarea:focus
    outline 2px solid var(--keppel-color)

  .label
    align-self flex-start
    color var(--keppel-color)
    font-weight 600

  .submit
    padding 1rem 0.75rem
    width 100%
    border-radius 3rem
    background-color var(--gunmetal-color)
    color var(--keppel-color)
    border none
    cursor pointer
    transition all 300ms
    font-weight 600
    font-size 0.9rem

  .submit:hover
    background-color var(--keppel-color)
    color var(--rhythm-color)
  .close-icon
    align-self end
    cursor pointer
    color var(--gunmetal-color)
    font-size 1.5rem
  .close-icon:hover
    color var(--fluid-color)


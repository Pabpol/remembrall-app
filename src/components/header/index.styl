.header
  position relative
  width 70%
  display flex
  justify-content flex-start
  gap 5px
  flex-direction column 
  margin 1rem
  color var(--keppel-color)

  p, h2
    font-family 'Nunito', sans-serif
    line-height 20px
.toggle
  position relative
  top 0
  width 60px
  height 60px
  font-display flex
  justify-content center
  align-items center
  font-size 2.5em
  cursor pointer
  color var(--rhythm-color)
